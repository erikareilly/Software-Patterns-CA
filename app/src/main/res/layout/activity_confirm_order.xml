<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrder">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Shipping Address"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/nameEdit"
        android:hint="Full Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"/>

    <EditText
        android:id="@+id/houseEdit"
        android:hint="House Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEdit"/>
    <EditText
        android:id="@+id/streetEdit"
        android:hint="Street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/houseEdit"/>
    <EditText
    android:id="@+id/countyEdit"
        android:hint="County"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/streetEdit"/>
    <EditText
        android:id="@+id/countryEdit"
        android:hint="Country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countyEdit"/>
    <EditText
        android:id="@+id/eirocdeEdit"
        android:hint="Eircode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countryEdit"/>

    <Button
        android:id="@+id/confirmB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_below="@id/eirocdeEdit"
        android:backgroundTint="#000080"/>

</RelativeLayout>